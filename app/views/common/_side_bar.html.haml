.side-bar
  .user
    %h3.user__name
      = current_user.name
    %ul.user__icons
      %li.user__icons__list
        = link_to new_group_path do
          %i.fa.fa-edit
      %li.user__icons__list
        = link_to edit_user_path(current_user) do
          %i.fa.fa-cog
  .groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .groups__group
          .groups__group__name
            = group.name
          .groups__group_message
            = group.show_last_message